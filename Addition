// addition of two variables

#include<iostream>
using namespace std;
void add(int a,int b);
void add(float a,float b);
void add(int a,int b,int c);

void add(int a,int b){
    cout<<"Addition ="<< a+b <<endl;
    return;
}

void add(int a,int b,int e){
    cout<<"Addition ="<< a+b+e <<endl;
    return;
}

void add(float a,float b){
    cout<<"Addition ="<< a+b <<endl;
    return;
}

int main()
{
    int a=10,b=20,e=30;
    float c=1.5,d=2.5;
    add(c,d);
    add(a,b);
    add(a,b,e);

    return 0;
}
